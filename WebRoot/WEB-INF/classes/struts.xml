<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"></constant>
    <constant name="struts.ui.theme" value="simple" />
	<package name="user" namespace="/" extends="struts-default">
        <action name="login" class="cn.edu.dlut.chuangxin.action.LoginAction" method="execute">
            <result name="login">/login.jsp</result>
            <result name="main">/main.jsp</result>
        </action>
        <action name="logout" class="cn.edu.dlut.chuangxin.action.LogoutAction" method="execute">
            <result name="login" type="redirectAction">
            	<param name="namespace">/</param>
				<param name="actionName">login</param>
			</result>
        </action>
        <action name="index" class="cn.edu.dlut.chuangxin.action.IndexAction" method="execute">
            <result name="index">/index.jsp</result>
        </action>
    </package>
    
    <package name="user_ajax" namespace="/" extends="json-default">
    	<action name="checkAdminPasswordAction" class="cn.edu.dlut.chuangxin.action.CheckAdminPasswordAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="getStudentsInfoAction" class="cn.edu.dlut.chuangxin.action.GetStudentsInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="getMajorsInfoAction" class="cn.edu.dlut.chuangxin.action.GetMajorsInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="getGradesInfoAction" class="cn.edu.dlut.chuangxin.action.GetGradesInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="checkStudentRegisterInfoAction" class="cn.edu.dlut.chuangxin.action.CheckStudentRegisterInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="getStudentInfoFromStdnumAction" class="cn.edu.dlut.chuangxin.action.GetStudentInfoFromStdnumAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="getTemperatureInfoAction" class="cn.edu.dlut.chuangxin.action.GetTemperatureInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
  	</package>
  	
  	<package name="admin_ajax" namespace="/admin" extends="json-default">
    	<action name="getStudentsInfoAction" class="cn.edu.dlut.chuangxin.action.GetStudentsInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="getMajorsInfoAction" class="cn.edu.dlut.chuangxin.action.GetMajorsInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="getGradesInfoAction" class="cn.edu.dlut.chuangxin.action.GetGradesInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="checkStudentRegisterInfoAction" class="cn.edu.dlut.chuangxin.action.CheckStudentRegisterInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="getStudentInfoFromStdnumAction" class="cn.edu.dlut.chuangxin.action.GetStudentInfoFromStdnumAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
    	<action name="getTemperatureInfoAction" class="cn.edu.dlut.chuangxin.action.GetTemperatureInfoAction">
    		<!-- 将返回类型设置为json -->
    		<result type="json"></result>
    	</action>
  	</package>
    
    <package name="admin" namespace="/admin" extends="struts-default">
        <action name="main" class="cn.edu.dlut.chuangxin.action.MainAction" method="execute">
            <result name="main">/main.jsp</result>
            <result name="login" type="redirectAction">
				<param name="namespace">/</param>
				<param name="actionName">login</param>
			</result>
        </action>
        <action name="studentsInfo" class="cn.edu.dlut.chuangxin.action.StudentsInfoAction" method="execute">
            <result name="students_info">/students_info.jsp</result>
        </action>
        <action name="studentsUpdate" class="cn.edu.dlut.chuangxin.action.StudentsUpdateAction" method="execute">
            <result name="students_update">/students_update.jsp</result>
        </action>
        <action name="studentsRegister" class="cn.edu.dlut.chuangxin.action.StudentsRegisterAction" method="execute">
            <result name="students_register">/students_register.jsp</result>
        </action>
        <action name="registerSuccess" class="cn.edu.dlut.chuangxin.action.RegisterSuccessAction" method="execute">
            <result name="register_success">/register_success.jsp</result>
        </action>
        <action name="temperatureInfo" class="cn.edu.dlut.chuangxin.action.TemperatureInfoAction" method="execute">
            <result name="temperature_info">/temperature_info.jsp</result>
        </action>
        
    </package>

</struts>
